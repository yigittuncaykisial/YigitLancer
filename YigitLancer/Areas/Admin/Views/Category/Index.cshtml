@model IEnumerable<Entities.DTOs.CategoryDtos>
@{
    ViewData["Title"] = "Kategoriler";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h3 class="mb-0">Kategoriler</h3>
    <a class="btn btn-primary"
       asp-area="Admin" asp-controller="Category" asp-action="Create">
        Yeni Kategori
    </a>
</div>

@if (TempData["Success"] is string ok)
{
    <div class="alert alert-success">@ok</div>
}

@if (!Model.Any())
{
    <div class="alert alert-secondary">Henüz kategori yok.</div>
}
else
{
    <table class="table table-dark table-striped align-middle">
        <thead>
            <tr>
                <th style="width:80px">Id</th>
                <th>Ad</th>
                <th style="width:200px"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var c in Model)
            {
                <tr>
                    <td>@c.Id</td>
                    <td>@c.CategoryName</td>
                    <td class="text-end">
                        <a class="btn btn-sm btn-outline-light"
                           asp-area="Admin" asp-controller="Category" asp-action="Edit" asp-route-id="@c.Id">
                            Düzenle
                        </a>

                        <form class="d-inline" method="post"
                              asp-area="Admin" asp-controller="Category" asp-action="Delete" asp-route-id="@c.Id">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-sm btn-outline-danger"
                                    onclick="return confirm('Silinsin mi?')">
                                Sil
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
