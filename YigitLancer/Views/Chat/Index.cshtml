@model IEnumerable<Controllers.ConversationListItemVM>
@{
    ViewData["Title"] = "Sohbetler";
}
<div class="d-flex justify-content-between align-items-center mb-3">
    <h3 class="mb-0">Sohbetler</h3>
    <a class="btn btn-sm btn-primary" asp-action="Create">Sohbet Oluştur</a>
</div>

@if (!Model.Any())
{
    <div class="alert alert-light border">Henüz sohbet yok.</div>
}
else
{
    <ul class="list-group">
        @foreach (var c in Model)
        {
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <div class="d-flex align-items-center gap-2">
                    <img src="@c.OtherUserAvatar" alt="" class="rounded-circle" style="width:36px;height:36px;object-fit:cover" />
                    <div>
                        <div class="fw-semibold">@c.OtherUserName</div>
                        <small class="text-muted">@c.JobName</small>
                    </div>
                </div>
                <a class="btn btn-sm btn-outline-primary" asp-action="Conversation" asp-route-id="@c.ConversationId">Aç</a>
            </li>
        }
    </ul>
}
