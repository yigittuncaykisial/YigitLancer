@model IEnumerable<Entities.Models.Jobs>

<h2>Satın Aldıklarım</h2>

@if (Model == null || !Model.Any())
{
    <div>Henüz satın aldığınız bir iş yok.</div>
}
else
{
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
        @foreach (var j in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-sm purchase-card">
                    <!-- Sabit oranlı görsel alanı -->
                    <div class="ratio ratio-16x9">
                        <img src="@(!string.IsNullOrEmpty(j.JobImg) ? j.JobImg : "/uploads/default-job.png")"
                             alt="@j.JobName"
                             class="w-100 h-100"
                             style="object-fit:cover;" />
                    </div>

                    <div class="card-body d-flex flex-column">
                        <h6 class="card-title clamp-2">@j.JobName</h6>
                        <p class="card-text text-muted mb-3">@j.JobPrice ₺</p>

                        <a class="btn btn-primary mt-auto"
                           asp-controller="Jobs"
                           asp-action="Details"
                           asp-route-id="@j.Id">
                            Detay
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
}

<style>
    /* Çok uzun başlıklar kart boyunu bozmaması için 2 satırla sınırla */
    .clamp-2 {
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }
</style>
