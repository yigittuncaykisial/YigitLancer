@model IEnumerable<Entities.Models.PurchaseRequest>
<h3>Onay Bekleyen İşler</h3>

@if (!Model.Any())
{
    <div class="alert alert-light border">Bekleyen talep yok.</div>
}
else
{
    <table class="table table-dark table-striped align-middle">
        <thead><tr><th>İş</th><th>Alıcı</th><th>Tarih</th><th></th></tr></thead>
        <tbody>
            @foreach (var r in Model)
            {
                <tr>
                    <td>@r.Job?.JobName</td>
                    <td>@r.Buyer?.UserName</td>
                    <td>@r.CreatedAt.ToLocalTime().ToString("dd.MM.yyyy HH:mm")</td>
                    <td class="text-end">
                        <form asp-action="Accept" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@r.Id" />
                            <button class="btn btn-sm btn-success">Kabul</button>
                        </form>
                        <form asp-action="Reject" method="post" class="d-inline ms-2">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@r.Id" />
                            <button class="btn btn-sm btn-outline-danger">Reddet</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
