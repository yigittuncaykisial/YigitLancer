@model IEnumerable<Entities.Models.Jobs>

<h3>İşlerim</h3>
<div class="row">
    @foreach (var j in Model)
    {
        <div class="col-md-4 mb-3">
            <div class="card h-100">
                <img class="card-img-top" src="@(!string.IsNullOrEmpty(j.JobImg) ? j.JobImg : "/uploads/default-job.png")" style="height:160px;object-fit:cover;" />
                <div class="card-body">
                    <h6 class="mb-2">@j.JobName</h6>

                    <div class="d-flex justify-content-between align-items-center">
                        <span class="badge @(j.IsPurchased ? "bg-secondary" : "bg-success")">
                            @(j.IsPurchased ? "Satıldı" : "Satışta")
                        </span>
                        <div class="btn-group">
                            <a class="btn btn-sm btn-outline-primary" asp-controller="Jobs" asp-action="Details" asp-route-id="@j.Id">Detay</a>
                            @* Satıldıysa düzenlemeyi pasif yapıyoruz (isteğe bağlı) *@
                            @if (!j.IsPurchased)
                            {
                                <a class="btn btn-sm btn-outline-warning" asp-controller="Jobs" asp-action="Edit" asp-route-id="@j.Id">Düzenle</a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
