@model IEnumerable<Entities.Models.Jobs>

<div class="row g-4">
    @foreach (var job in Model)
    {
        <div class="col-md-4">
            <div class="card h-100 shadow-sm border-0 rounded-4 job-card overflow-hidden">
                <div class="position-relative card-img-wrapper">
                    <img src="@(!string.IsNullOrEmpty(job.JobImg) ? job.JobImg : "/uploads/default-job.png")"
                         class="card-img-top rounded-top"
                         style="height:220px; object-fit:cover;"
                         alt="@job.JobName" />
                    @if (job.IsPurchased)
                    {
                        <span class="badge bg-secondary position-absolute top-0 end-0 m-2">Satın Alındı</span>
                    }
                    <div class="card-overlay d-flex align-items-center justify-content-center">
                        <a asp-controller="Jobs" asp-action="Details" asp-route-id="@job.Id" class="btn btn-primary shadow-sm">
                            Detayları Gör
                        </a>
                    </div>
                </div>
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title fw-bold">@job.JobName</h5>
                    <p class="card-text text-truncate" style="max-height:60px;">@job.JobDescription</p>

                    <p class="mt-auto mb-1">
                        <span class="badge bg-primary">@job.Category?.CategoryName</span>
                    </p>

                    <p class="mb-1">
                        <span class="badge bg-success">
                            @if (job.User != null)
                            {
                                @job.User.Fullname
                            }
                            else
                            {
                                <text>Kullanıcı Bilgisi Yok</text>
                            }
                        </span>
                    </p>

                    <p class="mb-3">
                        <span class="badge bg-warning text-dark">@job.JobPrice ₺</span>
                    </p>

                    @if (!job.IsPurchased)
                    {
                        <a asp-controller="Purchase" asp-action="Checkout" asp-route-jobId="@job.Id" class="btn btn-success btn-sm shadow-sm w-100 mt-auto">
                            Satın Al
                        </a>
                    }
                </div>
            </div>
        </div>
    }
</div>

<style>
    .job-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        cursor: pointer;
    }

        .job-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 15px 30px rgba(0,0,0,0.2);
        }

    .card-img-wrapper {
        position: relative;
        overflow: hidden;
    }

    .card-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0,0,0,0.4);
        opacity: 0;
        transition: opacity 0.3s ease;
    }

    .card-img-wrapper:hover .card-overlay {
        opacity: 1;
    }

    .card-overlay .btn {
        opacity: 0.9;
    }
</style>
