@model Entities.ViewModels.JobCreateViewModel
@{
    ViewData["Title"] = "İlanı Düzenle";
    var currentImage = ViewBag.CurrentImage as string ?? "/uploads/default-job.png";
    var jobId = (int)ViewBag.JobId;
}

<div class="container mt-4">
    <h3 class="mb-3">İlanı Düzenle</h3>

    @if (TempData["Error"] is string err)
    {
        <div class="alert alert-danger">@err</div>
    }
    @if (TempData["Success"] is string ok)
    {
        <div class="alert alert-success">@ok</div>
    }

    <form asp-action="Edit" asp-controller="Jobs" method="post" enctype="multipart/form-data" asp-route-id="@jobId" class="card p-3 shadow-sm rounded-4">
        @Html.AntiForgeryToken()

        <div class="row g-3">
            <div class="col-md-7">
                <div class="mb-3">
                    <label asp-for="JobName" class="form-label">İlan Adı</label>
                    <input asp-for="JobName" class="form-control" maxlength="100" />
                    <span class="text-danger" asp-validation-for="JobName"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="JobDescription" class="form-label">Açıklama</label>
                    <textarea asp-for="JobDescription" class="form-control" rows="5" maxlength="1000"></textarea>
                    <span class="text-danger" asp-validation-for="JobDescription"></span>
                </div>

                <div class="row">
                    <div class="col-md-4 mb-3">
                        <label asp-for="JobPrice" class="form-label">Fiyat (₺)</label>
                        <input asp-for="JobPrice" type="number" min="1" class="form-control" />
                        <span class="text-danger" asp-validation-for="JobPrice"></span>
                    </div>
                    <div class="col-md-8 mb-3">
                        <label asp-for="CategoryId" class="form-label">Kategori</label>
                        <select asp-for="CategoryId" class="form-select"
                                asp-items="new SelectList((System.Collections.IEnumerable)ViewBag.Categories, nameof(Entities.Models.Category.Id), nameof(Entities.Models.Category.CategoryName))">
                            <option value="">Seçiniz</option>
                        </select>
                        <span class="text-danger" asp-validation-for="CategoryId"></span>
                    </div>
                </div>
            </div>

            <div class="col-md-5">
                <label class="form-label">Mevcut Görsel</label>
                <div class="mb-2">
                    <img src="@currentImage" class="img-fluid rounded border" style="max-height:220px;object-fit:cover;" />
                </div>
                <div class="mb-3">
                    <label asp-for="JobImgFile" class="form-label">Yeni Görsel (opsiyonel)</label>
                    <input asp-for="JobImgFile" type="file" class="form-control" />
                    <small class="text-muted">Yüklerseniz mevcut görselin yerini alır.</small>
                </div>
            </div>
        </div>

        <div class="d-flex justify-content-between mt-2">
            <a asp-action="Details" asp-route-id="@jobId" class="btn btn-outline-secondary">
                <i class="bi bi-chevron-left me-1"></i> Detaya Dön
            </a>
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-save me-1"></i> Kaydet
            </button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
