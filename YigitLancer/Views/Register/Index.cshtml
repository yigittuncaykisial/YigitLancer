@model Entities.ViewModels.RegisterViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Lancer • Register</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <style>
        body {
            min-height: 100vh;
            background: radial-gradient(1200px 600px at -10% -10%, rgba(0,123,255,.12), transparent 60%), radial-gradient(900px 600px at 110% 110%, rgba(40,167,69,.09), transparent 60%), #0f1114;
            color: #e9ecef;
        }

        .auth-card {
            background: rgba(255,255,255,.04);
            backdrop-filter: saturate(160%) blur(10px);
            border: 1px solid rgba(255,255,255,.08);
            border-radius: 22px;
        }

        .side-pane {
            background: linear-gradient(180deg, rgba(33,37,41,.65), rgba(33,37,41,.65)), radial-gradient(1200px 600px at 30% -20%, rgba(0,123,255,.35), transparent 60%), radial-gradient(900px 600px at 120% 120%, rgba(40,167,69,.28), transparent 60%);
            color: #f8f9fa;
        }

        .brand-badge {
            letter-spacing: .04em
        }

        .form-control, .form-select {
            background: rgba(255,255,255,.02);
            color: #fff;
            border-color: rgba(255,255,255,.18)
        }

            .form-control::placeholder {
                color: #adb5bd
            }

            .form-control:focus, .form-select:focus {
                box-shadow: none;
                border-color: #86b7fe
            }

        .btn-primary {
            background: linear-gradient(135deg,#0d6efd,#0aa2c0);
            border: 0
        }

            .btn-primary:hover {
                filter: brightness(1.05)
            }

        .preview {
            width: 56px;
            height: 56px;
            border-radius: 12px;
            object-fit: cover;
            background: rgba(255,255,255,.06);
            border: 1px solid rgba(255,255,255,.12);
        }

        .input-group > .btn {
            border-color: rgba(255,255,255,.18)
        }

        .field-validation-error {
            color: #ffd166 !important;
            font-size: .85rem;
        }
    </style>
</head>
<body class="d-flex align-items-center py-4">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-lg-10 col-xxl-8">
                <div class="auth-card shadow-lg overflow-hidden">
                    <div class="row g-0">
                        <!-- Sol panel -->
                        <div class="col-lg-5 p-4 p-md-5 side-pane d-none d-lg-flex flex-column justify-content-between">
                            <div>
                                <div class="d-inline-block px-3 py-1 rounded-pill bg-light text-dark fw-semibold brand-badge">Lancer</div>
                                <h2 class="mt-4 fw-bold">Yeni hesabını oluştur</h2>
                                <p class="text-light-50">Freelancer’larla güvenle çalış, projelerini hızla hayata geçir.</p>
                                <ul class="mt-3 small text-light-50">
                                    <li>Güvenli ödeme &amp; satın alma geçmişi</li>
                                    <li>Değerlendirme &amp; yorum sistemi</li>
                                    <li>Kategori &amp; filtrelerle kolay keşif</li>
                                </ul>
                            </div>
                            <div class="small text-light-50">© @DateTime.Now.Year Lancer</div>
                        </div>

                        <!-- Sağ: Form -->
                        <div class="col-lg-7 p-4 p-md-5">
                            <h3 class="fw-bold mb-1">Register</h3>
                            <p class="text-muted mb-3">Dakikalar içinde başlayalım.</p>

                            <div asp-validation-summary="ModelOnly" class="text-warning small mb-3"></div>

                            @if (ViewBag.Error != null)
                            {
                                <div class="alert alert-danger">@ViewBag.Error</div>
                            }

                            <form asp-action="Index" method="post" enctype="multipart/form-data" novalidate>
                                @Html.AntiForgeryToken()

                                <div class="row g-3">
                                    <div class="col-md-6">
                                        <label asp-for="Name" class="form-label">First Name</label>
                                        <input asp-for="Name" class="form-control" placeholder="Ali" />
                                        <span asp-validation-for="Name" class="field-validation-error"></span>
                                    </div>
                                    <div class="col-md-6">
                                        <label asp-for="Surname" class="form-label">Last Name</label>
                                        <input asp-for="Surname" class="form-control" placeholder="Yılmaz" />
                                        <span asp-validation-for="Surname" class="field-validation-error"></span>
                                    </div>

                                    <div class="col-md-6">
                                        <label asp-for="UserName" class="form-label">Username</label>
                                        <input asp-for="UserName" class="form-control" placeholder="aliyilmaz" />
                                        <span asp-validation-for="UserName" class="field-validation-error"></span>
                                    </div>
                                    <div class="col-md-6">
                                        <label asp-for="UserEmail" class="form-label">Email</label>
                                        <input asp-for="UserEmail" type="email" class="form-control" placeholder="ali@example.com" />
                                        <span asp-validation-for="UserEmail" class="field-validation-error"></span>
                                    </div>

                                    <div class="col-md-6">
                                        <label asp-for="UserPassword" class="form-label">Password</label>
                                        <div class="input-group">
                                            <input asp-for="UserPassword" type="password" class="form-control" id="regPassword" placeholder="Min 8 karakter" />
                                            <button class="btn btn-outline-light" type="button" id="toggleRegPwd">Göster</button>
                                        </div>
                                        <span asp-validation-for="UserPassword" class="field-validation-error"></span>
                                    </div>
                                    <div class="col-md-3">
                                        <label asp-for="Age" class="form-label">Age</label>
                                        <input asp-for="Age" type="number" class="form-control" min="0" />
                                        <span asp-validation-for="Age" class="field-validation-error"></span>
                                    </div>
                                    <div class="col-md-3">
                                        <label asp-for="UserJob" class="form-label">Job</label>
                                        <select asp-for="UserJob" class="form-select bg-dark text-light border-secondary">
                                            <option value="">Select Job</option>
                                            <option value="Buyer">Buyer</option>
                                            <option value="Freelancer">Freelancer</option>
                                        </select>
                                        <span asp-validation-for="UserJob" class="text-danger small"></span>
                                    </div>

                                    <div class="col-12">
                                        <label asp-for="UserDescription" class="form-label">Description</label>
                                        <textarea asp-for="UserDescription" class="form-control" rows="3" placeholder="Kendinden kısaca bahset..."></textarea>
                                        <span asp-validation-for="UserDescription" class="field-validation-error"></span>
                                    </div>

                                    <div class="col-12">
                                        <label class="form-label d-flex align-items-center justify-content-between">
                                            <span>Profile Image</span>
                                            <img id="preview" class="preview" src="/uploads/default.png" alt="preview" />
                                        </label>
                                        <input asp-for="ProfileImage" type="file" class="form-control" id="profileImage" accept="image/*" />
                                    </div>

                                    <div class="col-md-6">
                                        <label asp-for="Captcha" class="form-label">Captcha: 1 + 1 = ?</label>
                                        <input asp-for="Captcha" class="form-control" placeholder="Yanıt" />
                                        <span asp-validation-for="Captcha" class="field-validation-error"></span>
                                    </div>

                                    <div class="col-12">
                                        <button type="submit" class="btn btn-primary w-100 py-2">Register</button>
                                    </div>
                                </div>
                            </form>

                            <div class="mt-3 text-center text-muted">
                                Zaten hesabın var mı?
                                <a class="text-decoration-underline" asp-controller="Auth" asp-action="Index">Login</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Password toggle
        (function () {
            const btn = document.getElementById('toggleRegPwd');
            const input = document.getElementById('regPassword');
            if (btn && input) {
                btn.addEventListener('click', () => {
                    const t = input.getAttribute('type') === 'password' ? 'text' : 'password';
                    input.setAttribute('type', t);
                    btn.textContent = (t === 'password') ? 'Göster' : 'Gizle';
                });
            }
        })();

        // Image preview
        (function () {
            const file = document.getElementById('profileImage');
            const img = document.getElementById('preview');
            if (file && img) {
                file.addEventListener('change', (e) => {
                    const f = e.target.files?.[0];
                    if (!f) return;
                    const reader = new FileReader();
                    reader.onload = (ev) => { img.src = ev.target.result; };
                    reader.readAsDataURL(f);
                });
            }
        })();
    </script>
</body>
</html>
